
{% comment %} <script>
  document.addEventListener("DOMContentLoaded", function() {
    var stateDropdown = document.getElementById("stateDropdown");
    var collegeOptionsContainer = document.getElementById("collegeOptionsContainer");
    var collegeDropdown = document.getElementById("collegeDropdown");

    function updateCollegesByState() {
      var selectedState = stateDropdown.value;
      var csrftoken = getCookie('csrftoken');

      // Make an AJAX request to the backend to fetch colleges by selected state
      fetch('get_colleges_by_state', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRFToken': csrftoken // Include the CSRF token for Django
        },
        body: JSON.stringify({ state: selectedState })
      })
      .then(response => response.json())
      .then(data => {
        // Clear existing options
        collegeOptionsContainer.innerHTML = '';

        // Create new options using appendChild
        data.colleges.forEach(function(college) {
          var option = document.createElement('div');
          var checkbox = document.createElement('input');
          checkbox.type = 'checkbox';
          var label = document.createElement('label');
          label.textContent = college.name;
          option.appendChild(checkbox);
          option.appendChild(label);
          collegeOptionsContainer.appendChild(option);
        });
      })
      .catch(error => console.error('Error:', error));
    }

    function getCookie(name) {
      var cookieValue = null;
      if (document.cookie && document.cookie !== '') {
        var cookies = document.cookie.split(';');
        for (var i = 0; i < cookies.length; i++) {
          var cookie = cookies[i].trim();
          if (cookie.substring(0, name.length + 1) === (name + '=')) {
            cookieValue = decodeURIComponent(cookie.substring(name.length + 1));
            break;
          }
        }
      }
      return cookieValue;
    }

    // Initial call to populate colleges based on default state
    updateCollegesByState();
  });
</script> {% endcomment %}




/// working /////////////////////////////



<script>
  document.addEventListener("DOMContentLoaded", function() {
    var stateDropdown = document.getElementById("stateDropdown");
    var collegeDropdown = document.getElementById("collegeDropdown");
  
    stateDropdown.addEventListener("change", function() {
      var selectedState = stateDropdown.value;
      var csrftoken = getCookie('csrftoken');
      // Make an AJAX request to the backend to fetch colleges by selected state
      fetch('get_colleges_by_state', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRFToken': csrftoken // Include the CSRF token for Django
        },
        body: JSON.stringify({ state: selectedState })
      })
      .then(response => response.json())
      .then(data => {
        
        // Clear existing options
        collegeDropdown.innerHTML = '';
        
        // Populate college options based on received data
        
      
          data.colleges.forEach(function(college) {
          var option = document.createElement('option');
          option.value = college.id;
          option.textContent = college.name;
          collegeDropdown.appendChild(option);
        });
      })
      .catch(error => console.error('Error:', error));
    });

    function getCookie(name) {
      var cookieValue = null;
      if (document.cookie && document.cookie !== '') {
        var cookies = document.cookie.split(';');
        for (var i = 0; i < cookies.length; i++) {
          var cookie = cookies[i].trim();
          if (cookie.substring(0, name.length + 1) === (name + '=')) {
            cookieValue = decodeURIComponent(cookie.substring(name.length + 1));
            break;
          }
        }
      }
      return cookieValue;
    }
  });
  </script>





  multiDropdown.innerHTML = '';

